#----------------------
# set the shell prompt
#----------------------

# see the bash man page for a description of special characters.
# colours
reset="\e[0m";
black="\e[30m";
red="\e[31m";
green="\e[32m";
yellow="\e[33m";
blue="\e[34m";
purple="\e[35m";
cyan="\e[36m"; # reserved for orange
ltgray="\e[37m";
dkgray="\e[90m";
bred="\e[91m";
bgreen="\e[92m";
byellow="\e[93m";
bblue="\e[94m";
bpurple="\e[95m";
bcyan="\e[96m"; # reserved for orange
white="\e[97m";

prompt_git() {
  local s='';
  local branchName='';

  # Check if the current directory is in a Git repository.
  if [ $(git rev-parse --is-inside-work-tree &>/dev/null; echo "${?}") == '0' ]; then

    # check if the current directory is in .git before running git checks
    if [ "$(git rev-parse --is-inside-git-dir 2> /dev/null)" == 'false' ]; then

      # Ensure the index is up to date.
      git update-index --really-refresh -q &>/dev/null;

      # Check for uncommitted changes in the index.
      if ! $(git diff --quiet --ignore-submodules --cached); then
        s+="+";
      fi;

      # Check for unstaged changes.
      if ! $(git diff-files --quiet --ignore-submodules --); then
        s+='!';
      fi;

      # Check for untracked files.
      if [ -n "$(git ls-files --others --exclude-standard)" ]; then
        s+='?';
      fi;

      # Check for stashed files.
      if $(git rev-parse --verify refs/stash &>/dev/null); then
        s+='$';
      fi;

    fi;

    # Get the short symbolic ref.
    # If HEAD isnâ€™t a symbolic ref, get the short SHA for the latest commit
    # Otherwise, just give up.
    branchName="$(git symbolic-ref --quiet --short HEAD 2> /dev/null || \
      git rev-parse --short HEAD 2> /dev/null || \
      echo '(unknown)')";

    [ -n "${s}" ] && s=" [${s}]";

    echo -e "\n${1}${branchName}${2}${s}";
    # printf "\n${1}${branchName}${s}"
  else
    return;
  fi;
}

# date-time
lt="\D{%H:%M. %d %b}";
st="\t";
ldt="\D{%d %b %Y}";
sdt="\D{%d %b}";
wday="\D{%a}";

# other prompt things
# \h	the hostname up to the first '.'
# \H 	the hostname

# 505. lhealey@TNE-lhealey-4852:~/Documents
# $ 

# \!  the history number of this command
PS1="\[${bcyan}\]\!. ";

# \u  the username of the current user
# \h  the hostname up to the first `.'
PS1+="\[${bgreen}\]\u@\h";

# plaintext colon
PS1+="\[${reset}\]:";

# \w  the current working directory; with $HOME abbreviated with a tilde
PS1+="\[${byellow}\]\w";

# Git repository details
PS1+="\$(prompt_git \"\[${white}\]on \[${ltgray}\]\" \"\[${red}\]\")";
# PS1+="\$(prompt_git \"\[${white}\]on \[${ltgray}\]\")";

# a literal $
PS1+="\[${reset}\]\n\$ ";

export PS1;

PS2="..";
export PS2;
